<h1><%=@recipe.name%> Details</h1>

<p>Ingredients:</p>
<ul>
<% @recipe.ingredients.each() do |ingredient| %>
      <li><%= ingredient.name %></li>
    <% end %>
</ul>


<p>Instructions: <%= @recipe.instructions() %></p>


<p>Tags:</p>
<ul>
  <% @recipe.tags.each() do |tag| %>
    <li><%= tag.name %></li>
  <% end %>
</ul>


<form action="/recipes/<%=@recipe.id%>/update_name" method="post">
  <input type="hidden" name="_method" value="patch">
  <input type="text" name="name" placeholder="Enter new name">
  <button type="submit">Update Name</button>

</form>

<form action="/recipes/<%=@recipe.id%>/update_instructions" method="post">
  <input type="hidden" name="_method" value="patch">
  <input type="text" name="instructions" placeholder="Enter new instructions">
  <button type="submit">Update Instructions</button>

</form>
