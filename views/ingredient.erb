<h1>Recipes with <%=@ingredient.name%></h1>
<ul>
<% @recipes.each() do |recipe| %>
  <li><a href="/recipes/<%=recipe.id%>"><%=recipe.name%></a></li>
<% end %>
</ul>

<form action="/ingredient/<%=@ingredient.id%>" method="post">
  <input type="hidden" name="_method" value="delete">
  <button type="submit">Delete this ingredient</button>

</form>
